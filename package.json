{
  "name": "chipsy",
  "version": "0.1.0",
  "description": "Chipsy Discord bot and control panel",
  "main": "bot/index.js",
  "scripts": {
    "start": "npm run dev",
    "dev": "node scripts/devRunner.mjs",
    "dev:api": "node api/index.js",
    "dev:bot": "node bot/index.js",
    "dev:panel": "npm --prefix panel run serve",
    "bot": "node bot/index.js",
    "panel:build": "npm --prefix panel run build",
    "dev:stack": "docker compose -f docker-compose.local.yml up",
    "build:images": "docker compose build bot api panel",
    "sync:commands": "node scripts/syncCommands.js",
    "pm2:local": "npm run panel:build && npx pm2 start ecosystem.config.js --env local",
    "pm2:production": "npm run panel:build && npx pm2 start ecosystem.config.js --env production",
    "pm2:restart": "npx pm2 restart chipsy || true",
    "pm2:stop": "npx pm2 delete chipsy || true",
    "pm2:logs": "npx pm2 logs chipsy",
    "test": "jest",
    "migrate:exp-columns": "node scripts/migrateExpColumns.js",
    "migrate:bigint-columns": "node scripts/migrateBigIntColumns.js",
    "migrate:log-indexes": "node scripts/migrateLogIndexes.js"
  },
  "author": "Mario Ciavarella",
  "license": "ISC",
  "engines": {
    "node": ">=18.17.0"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "canvas": "^3.2.0",
    "chalk": "^5.6.2",
    "chokidar": "^3.6.0",
    "discord.js": "^14.14.1",
    "dotenv": "^16.3.1",
    "express": "^4.17.1",
    "express-mysql-session": "^3.0.3",
    "express-rate-limit": "^8.2.0",
    "express-session": "^1.16.2",
    "helmet": "^8.1.0",
    "imgur": "^2.5.0",
    "mysql2": "^3.9.7",
    "node-fetch": "^2.6.7",
    "pokersolver": "^2.1.3",
    "sanitize-html": "^2.17.0",
    "sharp": "^0.34.4",
    "text-to-svg": "^3.1.5",
    "winston": "^3.18.3",
    "ws": "^8.18.3",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "pm2": "^5.3.0",
    "supertest": "^7.1.4"
  }
}
